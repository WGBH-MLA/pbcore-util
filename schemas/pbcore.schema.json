{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PBCore JSON Schema",
  "type": "object",
  "definitions": {
    "pbcoreTextElement": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        }
      },
      "required": ["text"]
    },
    "pbcoreSourceElement": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/pbcoreTextElement"
        }
      ],
      "properties": {
        "source": {
          "type": "string"
        }
      }
    },

    "pbcoreElement": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/pbcoreSourceElement"
        }
      ],
      "properties": {
        "ref": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "annotation": {
          "type": "string"
        }
      }
    },
    "pbcoreRepeatableElement": {
      "type": "array",
      "items": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/definitions/pbcoreTextElement"
          }
        ]
      }
    }
  },
  "properties": {
    "pbcoreDescriptionDocument": {
      "type": "object",
      "properties": {
        "xsi:schemaLocation": {
          "type": "string"
        },
        "pbcoreAssetType": {
          "$ref": "#/definitions/pbcoreRepeatableElement"
        },
        "pbcoreIdentifier": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "source": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["source", "text"]
          }
        },
        "pbcoreTitle": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "titleType": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["titleType", "text"]
          }
        },
        "pbcoreDescription": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              }
            },
            "required": ["text"]
          }
        },
        "pbcoreCreator": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "creator": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "ref": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "creatorRole": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": ["text"]
                }
              }
            },
            "required": ["creator", "creatorRole"]
          }
        },
        "pbcoreInstantiation": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "instantiationIdentifier": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "source": {
                      "type": "string"
                    },
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": ["source", "text"]
                }
              },
              "instantiationPhysical": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "instantiationLocation": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "instantiationMediaType": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "instantiationGenerations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": ["text"]
                }
              },
              "instantiationDuration": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "instantiationTracks": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "instantiationChannelConfiguration": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "instantiationAlternativeModes": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "instantiationEssenceTrack": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "essenceTrackType": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string"
                        }
                      },
                      "required": ["text"]
                    },
                    "essenceTrackAspectRatio": {
                      "type": "object",
                      "properties": {
                        "text": {
                          "type": "string"
                        }
                      },
                      "required": ["text"]
                    }
                  },
                  "required": ["essenceTrackType"]
                }
              },
              "instantiationAnnotation": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "annotationType": {
                      "type": "string"
                    },
                    "text": {
                      "type": "string"
                    }
                  },
                  "required": ["text"]
                }
              }
            },
            "required": ["instantiationIdentifier", "instantiationLocation"]
          }
        },
        "pbcoreAnnotation": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "annotationType": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["text"]
          }
        },
        "pbcoreRelation": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pbcoreRelationType": {
                "type": "object",
                "properties": {
                  "source": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "pbcoreRelationIdentifier": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              }
            },
            "required": ["pbcoreRelationType", "pbcoreRelationIdentifier"]
          }
        },
        "pbcoreCoverage": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "coverage": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              },
              "coverageType": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  }
                },
                "required": ["text"]
              }
            },
            "required": ["coverage"]
          }
        },
        "pbcoreAudienceLevel": {
          "$ref": "#/definitions/pbcoreRepeatableElement"
        }
      },
      "required": [
        "xsi:schemaLocation",
        "pbcoreIdentifier",
        "pbcoreTitle",
        "pbcoreDescription"
      ]
    }
  },
  "required": ["pbcoreDescriptionDocument"]
}
